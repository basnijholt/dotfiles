{
  "$schema": "https://opencode.ai/config.json",
  "disabled_providers": ["google-vertex-ai", "google-vertex-anthropic"],
  "permission": "allow",
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "http://litellm.local:4000/v1",
        "apiKey": "sk-dummy"
      },
      "models": {
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6 (LiteLLM)",
          "limit": { "context": 200000, "output": 32000 }
        },
        "claude-opus-4-5": {
          "name": "Claude Opus 4.5 (LiteLLM)",
          "limit": { "context": 200000, "output": 32000 }
        },
        "claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (LiteLLM)",
          "limit": { "context": 200000, "output": 16000 }
        },
        "claude-haiku-4-5": {
          "name": "Claude Haiku 4.5 (LiteLLM)",
          "limit": { "context": 200000, "output": 8000 }
        }
      }
    },
    "llama-cpp": {
      "npm": "@ai-sdk/openai-compatible",
